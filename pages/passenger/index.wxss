.site-popup,
.time-popup {
  box-sizing: border-box;
  position: absolute;
  z-index: 99999;
  left: 0;
  border: none;
  background: #fff;
  text-align: center;
  border: 1rpx solid #fff;
}
.popup__content {
  position: absolute;
  left: 0;
  bottom: 120rpx;
  z-index: 13333;
  width: 100%;
  height: auto;
  line-height: 150rpx;
  text-align: center;
  background: #ffffff;
}
.text22 {
  color: #333333;
  font-size: 32rpx;
}
.bus-container {
  margin-top: 10rpx;
  padding-bottom: 10rpx;
}
.top {
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
}
.flex-container {
  position: relative;
  z-index: 6;
  box-sizing: border-box;
  display: block;
  width: 96%;
  margin: 20rpx 2% 0 2%;
  padding: 0rpx 30rpx 20rpx 30rpx;
  background: #fff;
}
.myflex {
  display: block;
  padding: 10rpx 10rpx;
  font-size: 24rpx;
}
.myflex1 {
  display: block;
  padding: 30rpx 30rpx 30rpx 30rpx;
  font-size: 24rpx;
}
.myflex1:nth-child(4) {
