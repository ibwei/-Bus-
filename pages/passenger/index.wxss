}
.m-flex {
  padding: 5rpx 20rpx;
  border: 1rpx #53bc64 solid;
  border-radius: 8rpx;
  color: #53bc64;
  margin-top: -4rpx;
}
.bottom + .bottom {
  border-top: 1rpx #dddee1 solid;
}
.goto-pic {
  width: 140rpx;
  height: 30rpx;
  margin-top: -10rpx;
  margin-bottom: 10rpx;
}
.bus-top {
  border-bottom: 1rpx dashed #dddee1;
  line-height: 2;
  padding: 20rpx 30rpx;
  text-align: center;
}
.start-time,
.end-time {
  font-size: 36rpx;
  font-weight: bold;
}
.start-time {
  text-shadow: 2rpx 2rpx 8rpx #eee;
